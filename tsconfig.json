{
  "compilerOptions": {
    "jsx": "react-jsx",        // âœ… This is required for React 17+ JSX support with SWC
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
